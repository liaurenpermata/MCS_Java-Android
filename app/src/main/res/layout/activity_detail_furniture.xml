<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFurniture">

    <ImageView
        android:id="@+id/imageViewDetailFurniture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_home_24"/>

    <TextView
        android:id="@+id/textViewDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDetailFurniture"
        app:layout_constraintStart_toStartOf="@+id/imageViewDetailFurniture"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetailFurniture" />

    <TextView
        android:id="@+id/textViewDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewDetailName"
        app:layout_constraintStart_toStartOf="@+id/textViewDetailName"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailName" />

    <EditText
        android:id="@+id/editTextDetailFurniture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:hint="input amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailPrice" />

    <Button
        android:id="@+id/buttonDetailFurniture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Buy"
        app:layout_constraintEnd_toEndOf="@+id/editTextDetailFurniture"
        app:layout_constraintStart_toStartOf="@+id/editTextDetailFurniture"
        app:layout_constraintTop_toBottomOf="@+id/editTextDetailFurniture" />
</androidx.constraintlayout.widget.ConstraintLayout>